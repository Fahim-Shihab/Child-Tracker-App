<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.appdev.debsourav.childtracker.MainActivity">

    <EditText
        android:inputType="text"
        android:id="@+id/edt1"
        android:layout_marginTop="70dp"
        android:layout_marginStart="25dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <EditText
        android:layout_marginTop="70dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/edt1"
        android:layout_marginStart="15dp"
        android:inputType="text"
        android:id="@+id/sign"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="70dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/sign"
        android:layout_marginStart="15dp"
        android:inputType="text"
        android:id="@+id/edt2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="54dp"
        android:layout_marginStart="25dp"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/button1"
        android:layout_marginStart="5dp"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/button2"
        android:layout_marginStart="5dp"
        android:text="3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button1"
        android:layout_marginStart="25dp"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginStart="5dp"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginStart="5dp"
        android:text="6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button4"
        android:layout_marginStart="25dp"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:text="9" />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/buttonC"
        android:text="+" />

    <Button
        android:id="@+id/buttonsub"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonadd"
        android:layout_toRightOf="@+id/buttonC"
        android:layout_marginStart="25dp"
        android:text="-" />

    <Button
        android:id="@+id/buttonmul"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonsub"
        android:layout_toRightOf="@+id/buttonC"
        android:layout_marginStart="25dp"
        android:text="*" />

    <Button
        android:id="@+id/button10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button7"
        android:layout_marginStart="25dp"
        android:text="." />

    <Button
        android:id="@+id/button0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button10"
        android:layout_marginStart="5dp"
        android:text="0" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button0"
        android:layout_marginStart="5dp"
        android:text="C" />

    <Button
        android:id="@+id/buttondiv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonmul"
        android:layout_toRightOf="@+id/buttonC"
        android:layout_marginStart="25dp"
        android:text="/" />

    <Button
        android:id="@+id/buttoneql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttondiv"
        android:layout_alignStart="@+id/button10"
        android:layout_below="@+id/button0"
        android:layout_marginTop="30dp"
        android:text="=" />

    <EditText
        android:id="@+id/Hour"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:hint="   Hour"
        android:textSize="16sp"
        android:inputType="number"
        android:textAllCaps="false"
        android:textColor="#fdfdfd" />

    <EditText
        android:id="@+id/Minute"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/Hour"
        android:hint="Minute"
        android:textSize="16sp"
        android:inputType="number"
        android:textAllCaps="false"
        android:textColor="#fdfdfd" />

    <Switch
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:id="@+id/switch1"
        android:text="AM  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Minute"
        android:textSize="12sp"
        android:textColor="#fcfcfc"
        />

    <Button
        android:id="@+id/alarm"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/switch1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:text="Set Alarm"
        android:textAllCaps="false"
        />


</RelativeLayout>